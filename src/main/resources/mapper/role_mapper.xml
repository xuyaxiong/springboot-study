<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.study.mapper.RoleMapper">

    <resultMap id="rolePrivilegeListMap" type="com.example.study.model.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="nameZh" column="name_zh"/>
        <collection property="privileges" ofType="com.example.study.model.Privilege" javaType="java.util.ArrayList">
            <id property="id" column="privilege_id"/>
            <result property="name" column="privilege_name"/>
            <result property="url" column="privilege_url"/>
        </collection>
    </resultMap>

    <select id="selectAllRoleAndPrivileges" resultMap="rolePrivilegeListMap">
        select
        r.id,
        r.name,
        r.name_zh,
        p.id privilege_id,
        p.name privilege_name,
        p.url privilege_url
        from role r
        inner join role_privilege rp on r.id = rp.role_id
        inner join privilege p on rp.privilege_id = p.id
    </select>
    <select id="findByName" parameterType="java.lang.String" resultType="com.example.study.model.Role">
        select
        id,
        name,
        name_zh
        from role
        where name = #{name}
    </select>
    <select id="findAll" resultType="com.example.study.model.Role">
        select
        id,
        name,
        name_zh
        from role
    </select>
</mapper>